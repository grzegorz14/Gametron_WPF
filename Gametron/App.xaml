<Application x:Class="Gametron.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Gametron"
             xmlns:converters="clr-namespace:Gametron.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/Colors1.xaml"/>
                <ResourceDictionary Source="Theme/CustomSlider.xaml"/>
                <ResourceDictionary Source="Theme/MenuRadioButtonTheme.xaml"/>
                <ResourceDictionary Source="Theme/SearchTextBoxTheme.xaml"/>
                <ResourceDictionary Source="Theme/ListViewButtonTheme.xaml"/>
                <ResourceDictionary Source="Theme/CollectionGridViewHeaderTheme.xaml"/>
                <ResourceDictionary Source="Theme/CollectionListViewItemTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:SortDescriptionToStringConverter x:Key="SortConverter"/>
            <converters:RatingToColorConverter x:Key="RatingConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
