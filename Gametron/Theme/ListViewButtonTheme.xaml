<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type Button}"
           x:Key="ListViewButtonTheme">
        <Style.Setters>
            <Setter Property="Background" Value="{StaticResource GreenSea1}"/>
        </Style.Setters>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource LightGreenSea1}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>